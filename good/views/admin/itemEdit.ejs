<% include header %>
<ol class="breadcrumb">
	<li class="text-info">栏目管理</li>
	<li class="active">编辑栏目</li>
</ol>

<div class="row formAdd">
	<div class="col-md-3"></div>
	<div class="col-md-6">
        <h3>编辑栏目信息</h3>
        <form action="/admin/itemUpdate" method="post">
            <!-- 隐藏域 来传递一个 id -->
            <input type="hidden" name="_id" value="<%=data._id%>">
            <div class="input-group">
              <span class="input-group-addon">栏目名称</span>
              <input type="text" class="form-control" name="name"  value="<%=data.name%>">
            </div>

            <div class="input-group">
              <span class="input-group-addon">栏目简介</span>
              <input type="text" class="form-control" name="info" value="<%=data.info%>">
            </div>   
 

            <div class="input-group">
              <span class="input-group-addon">栏目排序</span>
              <input type="number" class="form-control" name="order" value="<%=data.order%>">
            </div>  

            <div class="center-block">
              <input type="submit" class="btn btn-success" value="确认修改">
            </div>

        </form>		
	</div>
	<div class="col-md-3"></div>
</div>

<% include footer %>
