<% include header %>
<ol class="breadcrumb">
	<li class="text-info">栏目管理</li>
	<li class="active">添加栏目</li>
</ol>

<div class="row formAdd">
	<div class="col-md-3"></div>
	<div class="col-md-6">
        <h3>添加栏目</h3>
        <form action="/admin/itemInsert" method="post">

            <div class="input-group">
              <span class="input-group-addon">栏目名称</span>
              <input type="text" class="form-control" name="name">
            </div>

            <div class="input-group">
              <span class="input-group-addon">栏目简介</span>
              <input type="text" class="form-control" name="info">
            </div>   

            <div class="input-group">
              <span class="input-group-addon">栏目排序</span>
              <input type="number" class="form-control" name="order" value="99">
            </div>  

            <div class="center-block">
              <input type="submit" class="btn btn-success" value="添加栏目">
            </div>

        </form>		
	</div>
	<div class="col-md-3"></div>
</div>

<% include footer %>
